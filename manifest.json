{
    "manifest_version": 3,
    "name": "Tablet Frontend Sites Back Button",
    "version": "1.0",
    "description": "Adds a back button to any sites that tablet-frontend.vercel.app may redirect you to and redirects you back for a better touchscreen experience",
    "permissions": ["activeTab", "scripting"],
    "content_scripts": [
        {
            "matches": [
                "*://*.netflix.com/*",
                "*://*.youtube.com/*",
                "*://*.disneyplus.com/*",
                "*://*.primevideo.com/*",
                "*://*.plex.tv/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.svg",
            "48": "icons/icon48.svg",
            "128": "icons/icon128.svg"
        }
    },
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    }
}